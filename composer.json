{
    "name": "acquia/lightning-project",
    "description": "Project template for Drupal 8 sites built with the Lightning distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drush/drush": "^9.0"
    },
    "require": {
        "acquia/lightning": "^4.0",
        "cweagans/composer-patches": "^1.6.0",
        "drupal/core-composer-scaffold": "*",
        "oomphinc/composer-installers-extender": "^1.1",
        "drupal/migrate_upgrade": "3.0-rc2",
        "drupal/migrate_plus": "4.0-beta1",
        "drupal/migrate_tools": "4.0-beta1",
        "drupal/migrate_manifest": "1.5",
        "drupal/asset_injector": "~2.1",
        "drupal/google_analytics": "~2.2",
        "drupal/at_tools": "~2.0",
        "drupal/adaptivetheme": "~2.0",
        "drupal/pixture_reloaded": "~1.0-rc1"
    },
    "repositories": [
        {
          "type": "composer",
          "url": "https://packages.drupal.org/8"
        },
        {
          "type": "vcs",
          "url": "https://github.com/SU-SWS/stanford_basic"
        },
        {
          "type": "composer",
          "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
      "post-create-project-cmd": "rm -r -f .travis.yml behat.yml .travis-ci",
      "quick-start": [
        "composer install",
        "php docroot/core/scripts/drupal quick-start lightning --no-interaction"
      ],
      "init-lando": [
        "cp lando/example.env .env",
        "cp lando/example.lando.yml .lando.yml",
        "cp lando/example.php.ini lando/php.ini"
      ]
    },
    "config": {
      "process-timeout": 0
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
          "locations": {
            "web-root": "docroot/"
          }
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
        "installer-types": [
          "bower-asset",
          "npm-asset"
        ],
        "patchLevel": {
          "drupal/core": "-p2"
        }
        },
        "enable-patching": true
    }
}
